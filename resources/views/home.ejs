<section class="hero px-8 py-16">
    <div class="container mx-auto flex items-center justify-between">
        <div class="w-1/2">
            <h6 class="text-lg"><em>Are you hungry?</em></h6>
            <h1 class="text-3xl md:text-6xl font-bold">Don't wait!</h1>
            <button data-tilt class="bg-orange-500 hover:bg-orange-400 text-white font-bold py-2 px-6 mt-6 border-b-4 border-orange-700 hover:border-orange-500 rounded-full hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-orange-400 focus:ring-opacity-75">
               Order Now
              </button>
        </div>
        <div class="w-1/2">
            <img src="/images/hero-pizza.png" alt="" data-tilt>
        </div>
    </div>
</section>
<section class="menu container mx-auto px-8 py-8">
    <h1 class="text-xl font-bold mb-8">All Pizzas</h1>
    <div class="grid grid-cols--1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 col-gap-12 row-gap-16">
        <% pizzas.forEach(function(pizza){ %>     <!-- for each pizza in the array, render a card also shashank we need to put js only in <% %> -->
        <div class="w-full md:w-64 p-4">
            <img data-tilt class="h-40 mb-4 mx-auto" src="/images/<%-pizza.image %>" alt="">
            <div class="text-center">
                <h1 class="mb-4 text-lg"><%-pizza.name %></h1>
                <span class="size py-1 px-4 rounded-full uppercase text-xs "><%-pizza.size %></span>
                <div class="flex items-center justify-around mt-6">
                    <span class="font-bold text-lg">â‚¹<%-pizza.price %></span>
                    <button data-pizza="<%= JSON.stringify(pizza) %>" class="add-to-cart py-1 px-6 bg-transparent hover:bg-orange-500 text-orange-700 font-semibold hover:text-white py-2 px-4 border border-orange-500 hover:border-transparent rounded-full">
                        <span>+</span>
                        <span>Add</span>
                    </button>
                </div>
            </div>
        </div>
        <% }); %>  <!-- end of forEach loop for pizzas array -->
    
    </div>
</section>

